@model Happystore.Models.Sub_Category

@{
    ViewBag.Title = "حذف";
}



<h3 class="alert alert-danger text-center"style="margin-top:50px"  >متأكد من الحذف</h3>
<div>

    <hr />
    <div class="form-horizontal col-md-offset-4 ">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2 lab" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control frm",@readonly="readonly" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Main_categorie_id, "القسم الرئيسى", htmlAttributes: new { @class = "control-label col-md-2 lab" })
            <div class="col-md-10">
                @Html.DropDownList("Main_categorie_id", null, htmlAttributes: new { @class = "form-control frm", @readonly = "readonly" })
                @Html.ValidationMessageFor(model => model.Main_categorie_id, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color col-lg-offset-6">
            <input type="submit" value="حذف" class="btn btn-danger btn-lg"style="width:20%" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
