@model Happystore.Models.Product

@{
    ViewBag.Title = "تفاصيل المنتج";
}

<h2 class="head text-center">@Html.DisplayFor(model => model.name)</h2>
<div class="row">


    <dl class="dl-horizontal col-md-6 t">


        <dt>
            @Html.DisplayNameFor(model => model.Discription) :
        </dt>

        <dd class="det">
            @Html.Raw(HttpUtility.HtmlDecode(Html.DisplayFor(modelItem => Model.Discription).ToString()))
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>

        <dd class="det">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Need_image)
        </dt>

        <dd class="det">
            @Html.DisplayFor(model => model.Need_image)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Need_Name)
        </dt>

        <dd class="det">
            @Html.DisplayFor(model => model.Need_Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Sub_Category.Name)
        </dt>

        <dd class="det">
            @Html.DisplayFor(model => model.Sub_Category.Name)
        </dd>

    </dl>
    <div class="col-md-5 col-lg-offset-1 col-xs-12">
        <img src="~/upload/@Model.Image" class=" im img-thumbnail img-responsive" style="width:100%;border-radius:20px" />
    </div>

</div>
<div class="row">
    <div class="col-md-12" style="margin-bottom:20px">
        <iframe 
         src="https://www.youtube.com/embed/@Model.Video?rel=0"
                frameborder="0" 
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                style="width:100%;height:500px"
                allowfullscreen></iframe>


    </div>
</div>
<div class="row">
    <p>
        @Html.ActionLink("تعديل", "Edit", new { id = Model.id }, new { @class = "btn btn-primary btn-lg b" }) ||
        @Html.ActionLink("الرجوع للقائمة السابقة", "Index", null, new { @class = "back" })
    </p>
</div>

