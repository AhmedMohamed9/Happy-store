<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Happy Store</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link rel="shortcut icon"href="~/Content/Image/ic.ico"type="image/x-icon" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="box-shadow: 1px 2px 12px rgba(0,0,0,.5)">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @* @Html.ActionLink("Happy Store", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            <a href="~/dashboard/index">
                <img src="~/Content/Image/1601092415483.png" class="logo" />
            </a> 
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="#">منتجاتنا <i class="glyphicon glyphicon-gift"></i></a></li>
                    <li><a href="#">المشتريات (0)<i class="glyphicon glyphicon-shopping-cart"></i></a></li>
                    <li><a href="#">تواصل معنا <i class="glyphicon glyphicon-phone"></i></a></li>

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="searchline">
        <input type="text" class="searchinp" placeholder="ابحث عن منتجك...."/>
        <input type="submit" value="أبحث" />
    </div>
    <div class="container body-content">
        <div style="min-height:550px">
            @RenderBody()
        </div>

        <hr />

    </div>
    <footer class="foo">
        <h3 style="color:rgb(173,80,132)" class="text-left"><img src="~/Content/Image/1601092415483.png" class="logo" /> - Happy More With Happy Store </h3>

    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
