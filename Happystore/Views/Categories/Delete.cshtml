@model Happystore.Models.Category

@{
    ViewBag.Title = "حذف القسم";
}



<h3 class="alert alert-danger">متأكد من الحذف?</h3>
<div>
 
    <div class="form-horizontal col-md-offset-4">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2 lab" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control frm",@readonly="readonly" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Fac_id, "المصنع", htmlAttributes: new { @class = "control-label col-md-2 lab" })
            <div class="col-md-10">
                @Html.DropDownList("Fac_id", null, htmlAttributes: new { @class = "form-control frm", @readonly = "readonly" })
                @Html.ValidationMessageFor(model => model.Fac_id, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
   

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color col-lg-offset-6">
            <input type="submit" value="حذف" class="btn  btn-danger "style="width:20%" /> |
            @Html.ActionLink("العوده للقائمة", "Index")
        </div>
    }
</div>
