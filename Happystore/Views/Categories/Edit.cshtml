@model Happystore.Models.Category

@{
    ViewBag.Title = "تعديل الاقسام";
}

<h2 class="text-center head">تعديل</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal col-md-offset-4">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.id)

    <div class="form-group">
        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2 lab" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control frm" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Fac_id, "المصنع", htmlAttributes: new { @class = "control-label col-md-2 lab" })
        <div class="col-md-10">
            @Html.DropDownList("Fac_id", null, htmlAttributes: new { @class = "form-control frm" })
            @Html.ValidationMessageFor(model => model.Fac_id, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Orde_num, htmlAttributes: new { @class = "control-label col-md-2 lab" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Orde_num, new { htmlAttributes = new { @class = "form-control frm" } })
            @Html.ValidationMessageFor(model => model.Orde_num, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="تعديل" class="btn btn-lg btn-info form-control" />
        </div>
    </div>
</div>
}

<div class="back ">
    @Html.ActionLink("الرجوع للقائمة", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
